<p id="notice"><%= notice %></p>
<h1>タスク一覧</h1>

<table>
  <thead>
    <tr>
      <th>タスク名</th>
      <th>タスク詳細</th>
      <th>ステータス</th>
      <th>優先順位</th>
      <th>終了期限</th>
      <th>作成日時</th>
      <th>更新日時</th>
      <th colspan="1"></th>
    </tr>
  </thead>
  <tbody>
    <% @tasks.each do |task|%>
      <tr>
       <td><%= task.name %></td>
       <td><%= task.content %></td>
       <td><%= task.status %></td>
       <td><%= task.priority %></td>
       <td><%= task.deadline %></td>
       <td><%= task.created_at %></td>
       <td><%= task.updated_at %></td>
       <td><%= link_to '詳細', task %></td>
       <td><%= link_to '編集', edit_task_path(task) %></td>
      </tr>
    <% end %>
  </tbody>
</table>