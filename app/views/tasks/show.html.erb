<p id="notice"><%= notice %></p>

<p>
  <strong>タスク名:</strong>
  <%= @task.name %>
</p>

<p>
  <strong>タスク内容　:</strong>
  <%= @task.content %>
</p>

<p>
  <strong>ステータス　:</strong>
  <%= t("enums.task.status.#{@task.status}") %>
</p>

<p>
  <strong>優先順位　:</strong>
  <%= t("enums.task.priority.#{@task.priority}") %>
</p>

<p>
  <strong>ラベル　:</strong>
  <% @task.labels.each do |label|%>
    <%= label.name %>
  <% end %>
</p>

<p>
  <strong>終了期限　:</strong>
  <%= @task.deadline && @task.deadline.to_s(:stamp) %>
</p>

<p>
  <strong>作成日時　:</strong>
  <%= @task.created_at && @task.created_at.to_s(:stamp) %>
</p>

<p>
  <strong>更新日時　:</strong>
  <%= @task.updated_at && @task.updated_at.to_s(:stamp) %>
</p>


<%= link_to 'Back', tasks_path %>