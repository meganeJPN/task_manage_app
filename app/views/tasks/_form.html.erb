<%= form_with(model: @task,local: true) do |form| %>
  <% if @task.errors.any? %>
    <div class="error_explanation">
      <h2><%= @task.errors.count %>件のエラーがあります。</h2>
      <ul>
        <% @task.errors.full_messages.each do |msg|%>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end%>
  <div>
    <%= form.label :name , "タスク名"%>
    <%= form.text_field :name %>
  </div>
    <div>
    <%= form.label :content , "タスク内容"%>
    <%= form.text_field :content %>
  </div>
    <div>
    <%= form.label :status , "ステータス"%>
    <%= form.select :status, Task.statuses.map{|k, v| [t("enums.task.status.#{k}"),v]} %>
  </div>
    <div>
    <%= form.label :priority , "優先順位"%>
    <%= form.select :priority, Task.priorities.map{|k, v| [t("enums.task.priority.#{k}"),v]} %>
  </div>
    <div>
    <%= form.label :deadline , "終了期限"%>
    <%= form.datetime_field :deadline %>
  </div>
  <div>
    <%= form.submit "登録する" %>
  </div>
<% end%>